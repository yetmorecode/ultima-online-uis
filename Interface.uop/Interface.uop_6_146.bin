----------------------------------------------------------------
-- Global Variables
----------------------------------------------------------------

UO_Login_StandardTextConfirmation = {}

UO_Login_StandardTextConfirmation.DialogData = {}

UO_Login_StandardTextConfirmation.DIALOG_EDGE_PADDING = 20
UO_Login_StandardTextConfirmation.Y_PADDING = 85
UO_Login_StandardTextConfirmation.MIN_HEIGHT = 160

UO_Login_StandardTextConfirmation.TID_OKAY   = 1011036  -- OKAY
UO_Login_StandardTextConfirmation.TID_CANCEL = 1011012  -- CANCEL

UO_Login_StandardTextConfirmation.TID_ERROR_DELETION = 1158779  -- Character deletion not confirmed.

UO_Login_StandardTextConfirmation.DefaultButtons = { { textTid=UO_Login_StandardTextConfirmation.TID_OKAY } }

UO_Login_StandardTextConfirmation.TextEntered = nil
UO_Login_StandardTextConfirmation.ConfirmationText = L"Delete"
UO_Login_StandardTextConfirmation.ConfirmationRequest = L"Type 'Delete' into the field to confirm"


-- dialogData 
--     windowName   = (string) name of window opening dialog (not optional)
--     title        = (wstring) title in titlebar (default L"")
--     titleTid     = (tid) title in titlebar (overrides title)
--     body         = (wstring) body text (default L"")
--     bodyTid      = (tid) body text (overrides body)
--     buttons      = (table) list of buttons to display (default okay,no callback)
--     hasScrollbar = (boolean) has a scrollbar (default false)
--     focusOnClose = (string) window to set focus to when the dialog closes (default nil)
--	   confirmationText	 = (string) key word that must be entered to proceed
--
-- buttons[i]
--     text       = (wstring) button text (default L"")
--     textTid    = (tid) button text (overrides text)
--     callback   = (function) function to call on return (default nil)
--     param      = (any type) optional parameter to send to callback (default nil)
--
-- Example:
--     local okayButton = { textTid=UO_Login_StandardTextConfirmation.TID_OKAY, callback=MyWindow.OnDialogOptionSelected, param=1 }
--     local cancelButton = { textTid=UO_Login_StandardTextConfirmation.TID_CANCEL, callback=MyWindow.OnDialogOptionSelected, param=2 }
--     local dialogData =
--     {
--         windowName = "MyWindow",
--         titleTid = 555555,
--         bodyTid = 123456,
--         buttons = { okayButton, cancelButton },
--         hasScrollbar = false,
--     }
--     UO_Login_StandardTextConfirmation.CreateDialog(dialogData)
--
--
function UO_Login_StandardTextConfirmation.CreateDialog(dialogData)

    if( dialogData.windowName == nil ) then
        Debug.Print("Window name not specified! Failing to create dialog")
        return false
    end

    local dialogWindowName = dialogData.windowName.."Dialog"
    
    if( UO_Login_StandardTextConfirmation.DialogData[dialogWindowName] ~= nil ) then
        Debug.Print("Window already has a dialog open! Failing to create dialog")
        return false
    end
    
    UO_Login_StandardTextConfirmation.DialogData[dialogWindowName] = dialogData
    
    CreateWindowFromTemplate(dialogWindowName,"UO_Login_StandardTextConfirmation","Root")
    
    return dialogWindowName
end

function UO_Login_StandardTextConfirmation.Initialize()
    local dialogWindowName = SystemData.ActiveWindow.name
    local dialogData = UO_Login_StandardTextConfirmation.DialogData[dialogWindowName]
    
    Interface.DestroyWindowOnClose[dialogWindowName] = true
    
    local dialogWidth, dialogHeight = WindowGetDimensions(dialogWindowName)
    local newHeight = UO_Login_StandardTextConfirmation.Y_PADDING
    
    local title = L""
    if( dialogData.titleTid ~= nil ) then
        title = GetStringFromTid(dialogData.titleTid)
    else
        title = dialogData.title
    end
    WindowUtils.SetWindowTitle(dialogWindowName,title)
    
    local body = L""
    if( dialogData.bodyTid ~= nil ) then
        body = GetStringFromTid(dialogData.bodyTid)
    else
        body = dialogData.body
    end
        
	WindowSetShowing(dialogWindowName.."Scrolled", false)
	LabelSetText(dialogWindowName.."NormalText",body)
	local textWidth, textHeight = LabelGetTextDimensions(dialogWindowName.."NormalText")
	newHeight = newHeight + textHeight
	LabelSetText(dialogWindowName.."NormalText2",UO_Login_StandardTextConfirmation.ConfirmationRequest)
	textWidth, textHeight = LabelGetTextDimensions(dialogWindowName.."NormalText")
	newHeight = newHeight + textHeight
	-- Add Text Box
	newHeight = newHeight + 60    

    TextEditBoxSetText( dialogWindowName.."TextEntryBox", L"")
    
    if( dialogData.buttons == nil ) then
        dialogData.buttons = UO_Login_StandardTextConfirmation.DefaultButtons
    end

    if( dialogData.confirmationText == nil ) then
        dialogData.confirmationText = UO_Login_StandardTextConfirmation.ConfirmationText
    end
    
    local numButtons = table.getn(dialogData.buttons)
    
    local spacing = 0
    for index, button in pairs(dialogData.buttons) do
        local buttonName = dialogWindowName.."Button"..index
        CreateWindowFromTemplate(buttonName,"UO_Login_TextConfirmationButtonTemplate",dialogWindowName)
        WindowSetId(buttonName,index)
        
        local text = L""
        if( button.textTid ~= nil ) then
            text = GetStringFromTid(button.textTid)
        else
            text = button.text
        end
        ButtonSetText(buttonName,text)
        
        if( index == 1 ) then
            local buttonWidth, buttonHeight = WindowGetDimensions(buttonName)
            local xOffset = 0
            
            newHeight = newHeight + buttonHeight
            
            spacing = (dialogWidth - (buttonWidth*numButtons)) / (numButtons+1)
            
            WindowAddAnchor(buttonName,"bottomleft",dialogWindowName,"bottomleft",spacing,-UO_Login_StandardTextConfirmation.DIALOG_EDGE_PADDING)
        else
            WindowAddAnchor(buttonName,"topright",dialogWindowName.."Button"..(index-1),"topleft",spacing,0)
        end
    end
    
    if( newHeight < UO_Login_StandardTextConfirmation.MIN_HEIGHT ) then
        newHeight = UO_Login_StandardTextConfirmation.MIN_HEIGHT
    end

    WindowSetDimensions(dialogWindowName,dialogWidth,newHeight)
    WindowSetShowing(dialogWindowName,true)    
end

function UO_Login_StandardTextConfirmation.Shutdown()
    local windowName = SystemData.ActiveWindow.name
    UO_Login_StandardTextConfirmation.DialogData[windowName] = nil
end


function UO_Login_StandardTextConfirmation.OnLButtonUp()
    local dialogWindowName = WindowUtils.GetActiveDialog()
    local dialogData = UO_Login_StandardTextConfirmation.DialogData[dialogWindowName]
    local index = WindowGetId(SystemData.ActiveWindow.name)
    local button = dialogData.buttons[index]    

    local windowData = 
			{	
				windowName = "DeleteConfirmErrorWindow",			
				titleTid = Login.TID.LABEL_23,
				bodyTid = UO_Login_StandardTextConfirmation.TID_ERROR_DELETION,				
			}

    local text_entered = TextEditBoxGetText( dialogWindowName.."TextEntryBox" )
	if (text_entered ~= nil and text_entered ~= L"") then
		 if(wstring.lower(text_entered) == wstring.lower(dialogData.confirmationText))then
		 	if( button ~= nil and button.callback ~= nil ) then
      		  button.callback(button.param)
    		end
    	 elseif button ~= nil and button.callback ~= nil then
    	 	UO_Login_StandardDialog.CreateDialog(windowData)
		 end		
	elseif button ~= nil and button.callback ~= nil then		
		UO_Login_StandardDialog.CreateDialog(windowData)
	end    
    
    DestroyWindow(dialogWindowName)
    
    if( dialogData.focusOnClose ~= nil ) then
        WindowAssignFocus (dialogData.focusOnClose, true)
    end
    
    UO_Login_StandardTextConfirmation.DialogData[dialogWindowName] = nil
end