                        </VerticalScrollbar>
                        <Window name="$parentChild">
                            <Windows>
                                <Label name="$parentText" font="UO_DefaultText" textalign="left" autoresize="true" maxchars="2048" linespacing="20" wordwrap="true" >
                                    <Size>
                                        <AbsPoint x="250" y="0" />
