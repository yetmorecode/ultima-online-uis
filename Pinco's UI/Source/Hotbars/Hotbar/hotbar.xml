<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
		<Window name="AssignHotkeyInfo" layer="overlay">
			<Size>
				<AbsPoint x="400" y="64" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<Windows>
				<FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background">
					<Size>
						<AbsPoint x="0" y="0" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" />
						<Anchor point="bottomright" relativePoint="bottomright" />
					</Anchors>
					<Windows>
						<FullResizeImage name="$parentFrame" inherits="UO_Default_Inner_Window_Frame">
							<Size>
								<AbsPoint x="10" y="10"/>
							</Size>
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" />
								<Anchor point="bottomright" relativePoint="bottomright" />
							</Anchors>
						</FullResizeImage>
					</Windows>
				</FullResizeImage>
				<Label name="$parentText" font="MyriadPro_16" maxchars="256" textalign="topcenter" autoresize="true" wordwrap="true">
					<Size>
						<AbsPoint x="250" y="0" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="8" y="8" />
						</Anchor>
					</Anchors>
					<Color r="255" g="255" b="255" a="255" />
				</Label>
			</Windows>
		</Window>

		<Window name="RequestTargetIdInfo" layer="overlay">
			<Size>
				<AbsPoint x="400" y="64" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" />
			</Anchors>
			<Windows>
				<FullResizeImage name="$parentBackground" inherits="UO_Simple_Black_Background">
