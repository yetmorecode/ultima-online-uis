function Credits.Initialize()
	local text = LoadTextFile("credits.txt")
	
	LabelSetText("CreditsTitle",GetStringFromTid(Credits.TID.Credits))
	LabelSetText("CreditsWindowText1",text)

	ScrollWindowUpdateScrollRect("CreditsScrollWindow")
	ScrollWindowSetOffset("CreditsScrollWindow", 0)
	ButtonSetText("CreditsOkButton", GetStringFromTid(Credits.TID.OK))
end

function Credits.OnOk()
	Login.ShowCredits()
end