                            <AbsPoint x="16" y="-17"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnMouseOver" function="ChatWindow.OnMouseOver" />
                        <EventHandler event="OnMouseOverEnd" function="ChatWindow.OnMouseOverEnd" />
                    </EventHandlers>
                </VerticalScrollbar>
            </Windows>
            <EventHandlers>
