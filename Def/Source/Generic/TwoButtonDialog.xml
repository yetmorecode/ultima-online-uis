                                    <Anchors>
                                        <Anchor point="topleft" relativePoint="topleft">
                                        </Anchor>
                                    </Anchors>
                                </Label>
                            </Windows>
                        </Window>

                    </Windows>
                </ScrollWindow>

                <Button name="$parentLeftButtonName" inherits="UO_Default_GumpButton" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" >
                            <AbsPoint x="45" y="-15" />
