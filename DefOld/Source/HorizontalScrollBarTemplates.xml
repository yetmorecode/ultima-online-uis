<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>
	
		<HorizontalScrollbar name="StandardHorizScroll" up="StandardHorizScrollUpBtn" down="StandardHorizScrollDownBtn" thumb="StandardHorizScrollThumb" gutter="StandardHorizScrollGutter" >
			<Anchors>
				<Anchor point="bottomleft" relativePoint="topleft">
					<AbsPoint x="5" y="-25"/>
				</Anchor>
				<Anchor point="bottomright" relativePoint="bottomright">
					<AbsPoint x="-5" y="-14"/>
				</Anchor>
			</Anchors>
			<ThumbOffset x="0" y="-1" />
      <ActiveZoneOffset x="500" y="500" />
		</HorizontalScrollbar>
		
		<Button name="StandardHorizScrollUpBtn" backgroundtexture="UO_Core" highlighttexture="UO_Core">
			<Size>
				<AbsPoint x="11" y="11" />
			</Size>
			<TexCoords>
				<Normal x="179" y="159" />
				<NormalHighlit x="179" y="172" />
				<Pressed x="179" y="172" />
				<PressedHighlit x="179" y="172" />
