		</Button>
		<Button name="StandardHorizScrollDownBtn" backgroundtexture="UO_Core" highlighttexture="UO_Core">
			<Size>
				<AbsPoint x="11" y="11" />
			</Size>
			<TexCoords>
				<Normal x="192" y="159" />
				<NormalHighlit x="192" y="172" />
				<Pressed x="192" y="172" />
				<PressedHighlit x="192" y="172" />
				<!--<Disabled x="356" y="8" />-->
			</TexCoords>
		</Button>
