		  <Size>
				<AbsPoint x="12" y="12" />
			</Size>
      <Sizes left="2" middle="2" right="10" />
			<TexCoords>
                <Left x="219" y="198" />
                <Middle x="231" y="198" />
                <Right x="243" y="198" />
			</TexCoords>
		</HorizontalResizeImage>
		<HorizontalResizeImage name="StandardHorizScrollGutter" texture="UO_Core">
			<Size>
				<AbsPoint x="11" y="11" />
			</Size>
			<Sizes left="9" middle="5" right="9"/>
